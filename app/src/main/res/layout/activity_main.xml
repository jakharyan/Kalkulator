<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#e57e00">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ankake1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="25dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Angka ke 1"
            android:inputType="number" />

        <EditText
            android:id="@+id/ankake2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:hint="Angka ke 2"
            android:background="@color/white"
            android:layout_margin="25dp"
            android:gravity="center"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/perHitungan"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="Hitungan"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/perTambahan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:layout_margin="12dp"/>
        <Button
            android:id="@+id/peNgurangan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:layout_margin="12dp"/>
        <Button
            android:id="@+id/perKalian"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="x"
            android:layout_margin="12dp"/>
        <Button
            android:id="@+id/pemBagian"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="/"
            android:layout_margin="12dp"/>
        <Button
            android:id="@+id/buttonHapus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="C"
            android:layout_margin="12dp"/>

    </LinearLayout>


</LinearLayout>